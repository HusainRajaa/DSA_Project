generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model LostItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    String
  location    String
  contact     String
  imageUrl    String?
  createdAt   DateTime @default(now())
}

model FoundItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    String
  location    String
  contact     String
  imageUrl    String?
  createdAt   DateTime @default(now())
}
